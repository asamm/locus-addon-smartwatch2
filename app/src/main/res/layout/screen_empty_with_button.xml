<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:ignore="ContentDescription,PxUsage" >

    <TextView
        style="@style/TextViewScreenTitle"
        android:layout_alignParentTop="true"
        android:text="@string/app_name" />

    <ImageView
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_marginTop="32px"
        android:scaleType="centerInside"
        android:src="@drawable/ic_warning_alt"
        android:layout_centerHorizontal="true"  />

    <TextView
        android:id="@+id/text_view_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/smart_watch_2_text_size_medium"
        android:layout_above="@+id/button_start_locus"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/button_start_locus"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/start_locus"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:background="@color/blue_dark"
        android:clickable="true"/>
    
</RelativeLayout>