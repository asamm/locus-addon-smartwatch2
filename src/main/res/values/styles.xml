<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="ExtensionLightTheme" parent="@android:style/Theme" />

    <style name="TextViewScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smart_watch_2_text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18px</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smart_watch_2_text_size_small</item>
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingRight">2px</item>
        <item name="android:paddingBottom">1px</item>
    </style>

    <style name="TextViewValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/smart_watch_2_text_size_medium</item>
        <item name="android:paddingLeft">2px</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingRight">2px</item>
        <item name="android:paddingBottom">1px</item>
    </style>
    
    <style name="TrackRecordButton">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2px</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingRight">2px</item>
        <item name="android:paddingBottom">1px</item>
    </style>

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/grey_light</item>
    </style>
    
    <style name="SeparatorVertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
    </style>

</resources>